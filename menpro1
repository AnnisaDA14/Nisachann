def newton_raphson(f, df, x0, tol=1e-6, max_iter=100):
    x = x0
    for i in range(max_iter):
        x_new = x - f(x) / df(x)
        if abs(x_new - x) < tol:
            return x_new
        x = x_new
    raise ValueError("Metode Newton-Raphson tidak konvergen")

# Contoh penggunaan:
import math

f = lambda x: x**2 - 4
df = lambda x: 2*x
initial_guess = 3.0
root = newton_raphson(f, df, initial_guess)
print(f"Akar persamaan:Â {root}")
